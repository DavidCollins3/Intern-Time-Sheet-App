@page
@model TimeKeeperApp.Pages.TimeEntryPages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TimeEntry</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeEntry.UserID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeEntry.UserID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeEntry.Week)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeEntry.Week)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeEntry.TimeIn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeEntry.TimeIn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeEntry.TimeOut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeEntry.TimeOut)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeEntry.HoursWorked)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeEntry.HoursWorked)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeEntry.ApprovalStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeEntry.ApprovalStatus)
        </dd>
    </dl>
</div>

@if (Model.TimeEntry.ApprovalStatus != true)
{
    @if ((await AuthorizationService.AuthorizeAsync(
            User, Model.TimeEntry, TimeEntryOperations.Approve)).Succeeded)
    {
        <form style="display:inline;" method="post">
            <input type="hidden" name="id" value="@Model.TimeEntry.TimeEntryId" />
            <input type="hidden" name="status" value="@TimeEntryOperations.Approve" />
            <button type="submit" class="btn btn-xs btn-success">Approve</button>
        </form>
    }
}

<div>
    @if ((await AuthorizationService.AuthorizeAsync(
        User, Model.TimeEntry,
        TimeEntryOperations.Update)).Succeeded)
    {
        <a asp-page="./Edit" asp-route-id="@Model.TimeEntry.TimeEntryId">Edit</a>
        <text> | </text>
    }
    <a asp-page="./Index">Back to List</a>
</div>
